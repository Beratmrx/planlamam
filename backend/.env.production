PORT=3002
NODE_ENV=production
JSON_LIMIT=10mb

# Puppeteer/Chromium ayarları (Docker container için)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# CORS – frontend origin
CORS_ORIGIN=https://etkegym.com

# MySQL Veritabanı Ayarları (Production)
# Eğer MySQL kullanmak isterseniz bu değerleri doldurun
# MYSQL_HOST=mysql
# MYSQL_PORT=3306
# MYSQL_USER=planla_user
# MYSQL_PASSWORD=GÜÇLÜ_ŞİFRE_BURAYA
# MYSQL_DATABASE=planla

# WhatsApp ayarları (opsiyonel)
# WHATSAPP_SESSION_TIMEOUT=3600000
